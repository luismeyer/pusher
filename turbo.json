{
	"$schema": "https://turbo.build/schema.json",
	"globalDotEnv": [".envrc"],
	"pipeline": {
		"compile": {
			"inputs": ["./**/*.ts", "./**/*.tsx"],
			"outputs": ["dist/**"],
			"dependsOn": ["^compile"]
		},
		"compile:watch": {
			"inputs": ["./**/*.ts", "./**/*.tsx"],
			"outputs": ["dist/**"],
			"persistent": true
		},
		"build": {
			"inputs": ["./**/*.ts", "./**/*.tsx"],
			"outputs": ["dist/**", ".next/**"],
			"dependsOn": ["compile"]
		},
		"build:watch": {
			"inputs": ["./**/*.ts", "./**/*.tsx"],
			"outputs": ["dist/**", ".next/**"],
			"persistent": true
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}

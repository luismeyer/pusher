{
	"compilerOptions": {
		"composite": true,
		"target": "ES6",
		"lib": ["esnext", "DOM"],
		"allowJs": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"references": [{ "path": "../shared" }]
}
